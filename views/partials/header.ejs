<div id="header">
  <div class="container">
    <div class="logo">
      <a href="#"><img src="/imgs/logo.png" alt="logo" /></a>
    </div>
    <%if (user) {%>
      <div class="text">
        <% if(user.emailConfig){%>
          <div class="cart-icon">
            <i id="carte" data-content=<%=user.cart.products.length %> class="fa-solid fa-cart-shopping shop-icon"
              onclick="cartIconClicker(this)"></i>
          </div>
          <% } else{%>
            <a href='/auth/signup/verify'>
              <button class="normal special">
                Verify
              </button>
            </a>
            <% } %>
              <div class="user-icon">
                <img class="fa-user" src=/imgs/users/<%=user.img %> alt="" onclick="userIconClicker(this)">
              </div>
              <div id="nav-buttom">
                <i class="fa-solid fa-bars" onclick="showNav()"></i>
              </div>
      </div>
      <% if(user.emailConfig) {%>
        <div class="holder-cart">
          <div class="holde-total">
            <div class="total-carte">
              Total:
              <span class="total"></span>
            </div>
          </div>

          <div class="container-cart">
            <h6 style="text-align: center" class="text-cart">
              Add products to Cart
            </h6>
            <% for(let i=0;i<user.cart.products.length;i++){%>
              <div id='<%=user.cart.products[i].product.id%>'>
                <img src='/<%=user.cart.products[i].product.imgSrc %>'>
                <h2>
                  <%=user.cart.products[i].product.price %>
                </h2>
                <h6>x <%=user.cart.products[i].count %>
                </h6>
                <div class="plus-minus">
                  <i class="fa-sharp fa-solid fa-plus"></i>
                  <i class="fa-sharp fa-solid fa-minus"></i>
                </div>
                <i class="fa-regular fa-circle-xmark" onclick='removeProduct(this.parentElement)'></i>
              </div>
              <% } %>
          </div>
          <div>
            <a href="/payment">
              <button id="buy-button" class="normal" style="background-color: #088178">
                Buy
              </button></a>
          </div>
        </div>
        <% } %>
          <div class="user-div">
            <div class="user-img">
              <img src=/imgs/users/<%=user.img %> alt="">
            </div>
            <div class="user-name">
              <%= user.firstName %>
            </div>
            <div class="setting" onclick="window.location.href='/me'">
              <i class="fa-solid fa-gear"></i>
              <span>Setting</span>
            </div>

            <div class="log-out" onclick="logOut(this)">
              <i class="fa-solid fa-right-from-bracket"></i>
              <button class="log-out">Log out</button>
            </div>
          </div>
          <% } else { %>
            <div class="auth">
              <div class="log-in">
                <a href="/auth/login">Log In</a>
              </div>
              <div class="sig-up">
                <a href='/auth/signup'>
                  <button class="normal special">
                    Sign Up
                  </button>
                </a>
              </div>
              <div id="nav-buttom">
                <i class="fa-solid fa-bars" onclick="showNav()"></i>
              </div>
            </div>
            <%}%>

              <div class="nav" id="nav-bar">

                <div class="user">
                  <div class="x-icon">
                    <i class="fa-solid fa-x" onclick="hideNav()"></i>
                  </div>
                  <% if(user){%>
                    <div class="img-user">
                      <img src=/imgs/users/<%=user.img %> alt="">
                    </div>
                    <div>Hello <a href="#">
                        <%= user.firstName %>
                      </a></div>
                    <% }else{ %>
                      <div class="crea">
                        <img src="/imgs/logo.png" alt="logo">
                      </div>
                      <% } %>
                </div>
                <ul>
                  <li><a href="/">Home</a></li>
                  <li><a href="/shop">Shop</a></li>
                  <li><a href="/blog">Blog</a></li>
                  <li><a href="/about">About</a></li>
                  <li><a href="/contact">Contact</a></li>
                </ul>
              </div>
  </div>
  <div class="over-layout" onclick="hideNav()"></div>

</div>