<%- include('../partials/head.ejs') %>

  <body>
    <%- include('../partials/flashMsg.ejs') -%>


      <div class="layout">
        <div class="img-log">
          <img src="../imgs/logo.png" alt="">
        </div>
        <div class="main-log">
          <div class="head">
            Log in to Cera
          </div>
          <div class="log">
            <div class="email-input">
              <form id="signup-form">
                <div class="User-login-email">
                  <span class="errors"></span>
                  <i class="fa-solid fa-user"></i>
                  <input autocomplete="" class="input" type="text" name="email" id="email" placeholder="Email">
                </div>
                <button class="normal">
                  Continue with Email
                </button>
              </form>

              <span class="or-span">or</span>
            </div>
            <div class="accounts">
              <div class="google-log">
                <button>Continue with Google</button>
              </div>
              <div class="apple-log">
                <button><i class="fa-brands fa-apple"></i> Continue with Apple</button>
              </div>
              <span>Don't have an Cera account? </span>
            </div>
            <div class="sin-up">
              <a href="/auth/signup"><button>Sign Up</button></a>
            </div>
          </div>
          
        </div>

      </div>

      <%- include('../partials/scripting.ejs') %>
  </body>
  
  <script>
    logIn()
  </script>

  </html>